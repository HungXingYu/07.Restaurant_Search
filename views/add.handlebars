<!--顯示錯誤訊息的程式碼-->
{{#each errorMessages}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{this.msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

<!-- add form-->
<div class="container search-bar mb-5">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form method="POST" action="/add">
                <h4 class="mb-2">新增餐廳</h4>
                <div class="form-group row">
                    <label for="name" class="col-sm-3 col-form-label star">餐廳中文名：</label>
                    <div class="col-sm-9">
                        <input type="text" name="name" id="name" class="form-control" placeholder="輸入餐廳中文名"
                            value="{{newRestaurant.name}}" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="name_en" class="col-sm-3 col-form-label star">餐廳英文名：</label>
                    <div class="col-sm-9">
                        <input type="text" name="name_en" id="name_en" class="form-control" placeholder="輸入餐廳英文名"
                            value="{{newRestaurant.name_en}}" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="category" class="col-sm-3 col-form-label star">餐廳類別：</label>
                    <div class="col-sm-9">
                        <input type="text" name="category" id="category" class="form-control" placeholder="輸入餐廳類別"
                            value="{{newRestaurant.category}}" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="image" class="col-sm-3 col-form-label star">餐廳照片：</label>
                    <div class="col-sm-9">
                        <input type="text" name="image" id="image" class="form-control" placeholder="輸入餐廳網路照片網址"
                            value="{{newRestaurant.image}}" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-3 col-form-label star">餐廳地址：</label>
                    <div class="col-sm-9">
                        <input type="text" name="location" id="location" class="form-control" placeholder="輸入餐廳地址"
                            value="{{newRestaurant.location}}" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phone" class="col-sm-3 col-form-label star">餐廳電話：</label>
                    <div class="col-sm-9">
                        <input type="text" name="phone" id="phone" class="form-control" placeholder="輸入餐廳電話"
                            value="{{newRestaurant.phone}}" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="google_map" class="col-sm-3 col-form-label text-nowrap star">餐廳Google Map：</label>
                    <div class="col-sm-9">
                        <input type="text" name="google_map" id="google_map" class="form-control"
                            value="{{newRestaurant.google_map}}" placeholder="輸入餐廳Google Map連結" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="rating" class="col-sm-3 col-form-label star">餐廳評分：</label>
                    <div class="col-sm-9">
                        <input type="text" name="rating" id="rating" class="form-control" placeholder="輸入餐廳評分"
                            value="{{newRestaurant.rating}}" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-sm-3 col-form-label star">餐廳簡介：</label>
                    <div class="col-sm-9">
                        <textarea name="description" class="form-control " id="description" rows="3"
                            value="{{newRestaurant.description}}" placeholder="輸入餐廳簡介" required="required"></textarea>
                    </div>
                </div>
                <button class="btn btn-major btn-block" type="submit">新增</button>
            </form>
        </div>
    </div>
</div>