<!-- add form-->
<div class="container search-bar mb-5">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form method="POST" action="/">
                <h4 class="mb-2">新增餐廳</h4>
                <div class="form-group row">
                    <label for="name" class="col-sm-3 col-form-label">餐廳中文名：</label>
                    <div class="col-sm-9">
                        <input type="text" name="name" id="name" class="form-control" placeholder="輸入餐廳中文名"
                            required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="name_en" class="col-sm-3 col-form-label">餐廳英文名：</label>
                    <div class="col-sm-9">
                        <input type="text" name="name_en" id="name_en" class="form-control" placeholder="輸入餐廳英文名"
                            required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="category" class="col-sm-3 col-form-label">餐廳類別：</label>
                    <div class="col-sm-9">
                        <input type="text" name="category" id="category" class="form-control" placeholder="輸入餐廳類別"
                            required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="image" class="col-sm-3 col-form-label">餐廳照片：</label>
                    <div class="col-sm-9">
                        <input type="text" name="image" id="image" class="form-control" placeholder="輸入餐廳網路照片網址"
                            required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-3 col-form-label">餐廳地址：</label>
                    <div class="col-sm-9">
                        <input type="text" name="location" id="location" class="form-control" placeholder="輸入餐廳地址"
                            required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phone" class="col-sm-3 col-form-label">餐廳電話：</label>
                    <div class="col-sm-9">
                        <input type="text" name="phone" id="phone" class="form-control" placeholder="輸入餐廳電話"
                            required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="google_map" class="col-sm-3 col-form-label text-nowrap">餐廳Google Map：</label>
                    <div class="col-sm-9">
                        <input type="text" name="google_map" id="google_map" class="form-control"
                            placeholder="輸入餐廳Google Map連結" required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="rating" class="col-sm-3 col-form-label">餐廳評分：</label>
                    <div class="col-sm-9">
                        <input type="text" name="rating" id="rating" class="form-control" placeholder="輸入餐廳評分"
                            required="required">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-sm-3 col-form-label">餐廳簡介：</label>
                    <div class="col-sm-9">
                        <textarea name="description" class="form-control " id="description" rows="3"
                            placeholder="輸入餐廳簡介" required="required"></textarea>
                    </div>
                </div>
                <button class="btn btn-major btn-block" type="submit">新增</button>
            </form>
        </div>
    </div>
</div>